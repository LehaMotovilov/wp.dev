{
	"name": "lehamotovilov/wp",
	"description": "Another modern WordPress stack.",
	"license": "MIT",
	"authors": [
		{
			"name": "Aleksey Motovilov",
			"email": "lehaqs@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"require": {
		"php": ">=7.4",
		"johnpbloch/wordpress": "6.2.2",
		"vlucas/phpdotenv": "5.5.0",
		"wpackagist-theme/twentytwentytwo": "1.4",
		"wpackagist-plugin/query-monitor": "3.12.3",
		"wpackagist-plugin/wordpress-seo": "20.8",
		"wpackagist-plugin/regenerate-thumbnails": "3.1.5"
	},
	"require-dev": {
		"deployer/deployer": "7.3.1",
		"squizlabs/php_codesniffer": "3.7.2",
		"sebastian/phpcpd": "6.0.3",
		"phpmd/phpmd": "2.13.0",
		"wp-coding-standards/wpcs": "2.3.0"
	},
	"extra": {
		"wordpress-install-dir": "public_html/wp",
		"installer-paths": {
			"public_html/app/mu-plugins/{$name}/": [
				"type:wordpress-muplugin"
			],
			"public_html/app/plugins/{$name}/": ["type:wordpress-plugin"],
			"public_html/app/themes/{$name}/": ["type:wordpress-theme"]
		}
	},
	"scripts": {
		"cs": "vendor/bin/phpcs --standard=phpcs.ruleset.xml public_html/app/themes/twentytwentytwo -s",
		"cp": "vendor/bin/phpcpd --min-lines=3 public_html/app/themes/twentytwentytwo",
		"md": "vendor/bin/phpmd public_html/app/themes/twentytwentytwo text phpmd.ruleset.xml"
	},
	"config": {
		"allow-plugins": {
			"johnpbloch/wordpress-core-installer": true,
			"composer/installers": true
		}
	}
}
