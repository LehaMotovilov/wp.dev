{
	"name": "lehamotovilov/wp",
	"description": "Another modern WordPress stack.",
	"license": "MIT",
	"authors": [
		{
			"name": "Aleksey Motovilov",
			"email": "lehaqs@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"require": {
		"php": ">=7.0",
		"johnpbloch/wordpress": "5.0.0",
		"vlucas/phpdotenv": "2.5.1",
		"robmorgan/phinx": "0.10.6",
		"wpackagist-theme/twentyfifteen": "2.1",
		"wpackagist-theme/twentysixteen": "1.6",
		"wpackagist-theme/twentynineteen": "1.0",
		"wpackagist-theme/storefront": "2.4.1",
		"wpackagist-plugin/health-check": "1.2.3",
		"wpackagist-plugin/redis-cache": "1.4.1",
		"wpackagist-plugin/query-monitor": "3.2.1",
		"wpackagist-plugin/wp-smushit": "3.0.1",
		"wpackagist-plugin/wordpress-seo": "9.2.1",
		"wpackagist-plugin/wordpress-importer": "0.6.4",
		"wpackagist-plugin/regenerate-thumbnails": "3.0.2",
		"wpackagist-plugin/woocommerce": "3.5.2"
	},
	"require-dev": {
		"wpackagist-plugin/theme-check": "20160523.1",
		"deployer/deployer": "6.3.0",
		"squizlabs/php_codesniffer": "3.3.2",
		"sebastian/phpcpd": "4.1.0",
		"phpmd/phpmd": "2.6.0",
		"wp-coding-standards/wpcs": "1.2.0"
	},
	"extra": {
		"wordpress-install-dir": "web/wp",
		"installer-paths": {
			"web/app/mu-plugins/{$name}/": [
				"type:wordpress-muplugin",
				"wpackagist-plugin/query-monitor"
			],
			"web/app/plugins/{$name}/": ["type:wordpress-plugin"],
			"web/app/themes/{$name}/": ["type:wordpress-theme"]
		}
	},
	"scripts": {
		"migrate:dev": "vendor/bin/phinx migrate --environment development",
		"cs": "vendor/bin/phpcs --standard=phpcs.ruleset.xml web/app/themes/twentyfifteen -s",
		"cp": "vendor/bin/phpcpd --min-lines=3 web/app/themes/twentyfifteen",
		"md": "vendor/bin/phpmd web/app/themes/twentyfifteen text phpmd.ruleset.xml"
	}
}
