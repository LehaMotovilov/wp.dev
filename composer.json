{
	"name": "lehamotovilov/wp",
	"description": "Another modern WordPress stack.",
	"license": "MIT",
	"authors": [
		{
			"name": "Aleksey Motovilov",
			"email": "lehaqs@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"require": {
		"php": ">=5.6.0",
		"johnpbloch/wordpress": "4.7",
		"vlucas/phpdotenv": "2.4.0",
		"wp-cli/wp-cli" : "0.24.1",
		"robmorgan/phinx": "0.6.4",
		"wpackagist-theme/twentyfifteen": "1.7",
		"wpackagist-theme/twentysixteen": "1.3",
		"wpackagist-plugin/query-monitor": "2.13.2",
		"wpackagist-plugin/debug-bar": "0.8.4",
		"wpackagist-plugin/debug-bar-extender": "0.5",
		"wpackagist-plugin/debug-bar-constants": "1.6.1",
		"wpackagist-plugin/developer": "1.2.6",
		"wpackagist-plugin/wordpress-seo": "3.9",
		"wpackagist-plugin/regenerate-thumbnails": "2.2.6",
		"wpackagist-plugin/woocommerce": "2.6.8"
	},
	"require-dev": {
		"wpackagist-plugin/theme-check": "20160523.1",
		"codeception/codeception": "2.2.5",
		"deployer/deployer": "3.3.0",
		"squizlabs/php_codesniffer": "2.7.0",
		"sebastian/phpcpd": "2.0.4",
		"phpmd/phpmd": "2.4.3",
		"wp-coding-standards/wpcs": "0.10.0"
	},
	"extra": {
		"wordpress-install-dir": "web/wp",
		"installer-paths": {
			"web/app/mu-plugins/{$name}/": [
				"type:wordpress-muplugin",
				"wpackagist-plugin/query-monitor"
			],
			"web/app/plugins/{$name}/": ["type:wordpress-plugin"],
			"web/app/themes/{$name}/": ["type:wordpress-theme"]
		}
	},
	"scripts": {
		"tests": "vendor/bin/codecept run",
		"cs": "vendor/bin/phpcs --standard=phpcs.ruleset.xml web/app/themes/twentyfifteen -s",
		"cp": "vendor/bin/phpcpd --min-lines=3 web/app/themes/twentyfifteen",
		"md": "vendor/bin/phpmd web/app/themes/twentyfifteen text phpmd.ruleset.xml"
	}
}
