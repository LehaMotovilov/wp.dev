{
	"name": "alekseymotovilov/wp",
	"description": "LehaMotovilov WP stack",
	"authors": [
		{
			"name": "Aleksey Motovilov",
			"email": "lehaqs@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "wordpress",
				"type": "webroot",
				"version": "4.2.3",
				"dist": {
					"type": "zip",
					"url": "https://github.com/WordPress/WordPress/archive/4.2.3.zip"
				},
				"require" : {
					"fancyguy/webroot-installer": "1.0.0"
				}
			}
		}
	],
	"require": {
		"php": ">=5.5.0",
		"wordpress": "4.2.*",
		"composer/installers": "~1.0",
		"robmorgan/phinx": "^0.4.4",
		"vlucas/phpdotenv": "^2.0",
		"deployer/deployer": "~3.0"
	},
	"installer-paths": {
		"app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
		"app/plugins/{$name}/": ["type:wordpress-plugin"],
		"app/themes/{$name}/": ["type:wordpress-theme"]
	},
	"extra": {
		"webroot-dir": "wp",
		"webroot-package": "wordpress"
	}
}
