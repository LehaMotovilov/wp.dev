{
	"name": "lehamotovilov/wp",
	"description": "Another modern WordPress stack.",
	"license": "MIT",
	"authors": [
		{
			"name": "Aleksey Motovilov",
			"email": "lehaqs@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		{
			"type": "package",
			"package": {
				"name": "wordpress",
				"type": "webroot",
				"version": "4.6.1",
				"dist": {
					"type": "zip",
					"url": "https://wordpress.org/wordpress-4.6.1.zip"
				},
				"require" : {
					"fancyguy/webroot-installer": "1.0.0"
				}
			}
		}
	],
	"require": {
		"php": ">=5.6.0",
		"wordpress": "4.6.1",
		"composer/installers": "~1.0",
		"symfony/console": "2.*",
		"robmorgan/phinx": "0.5.*",
		"vlucas/phpdotenv": "2.2.*",
		"wp-cli/wp-cli" : "^0.23",
		"wpackagist-theme/twentyfifteen": "1.6",
		"wpackagist-theme/twentysixteen": "1.3",
		"wpackagist-plugin/query-monitor": "2.13.1",
		"wpackagist-plugin/debug-bar": "0.8.4",
		"wpackagist-plugin/debug-bar-extender": "0.5",
		"wpackagist-plugin/debug-bar-constants": "1.6.1",
		"wpackagist-plugin/developer": "1.2.6",
		"wpackagist-plugin/wordpress-seo": "3.6.1",
		"wpackagist-plugin/regenerate-thumbnails": "2.2.6",
		"wpackagist-plugin/rest-api": "2.0-beta13",
		"wpackagist-plugin/woocommerce": "2.6.4"
	},
	"require-dev": {
		"wpackagist-plugin/theme-check": "20160523.1",
		"codeception/codeception": "*",
		"deployer/deployer": "3.3.*",
		"squizlabs/php_codesniffer": "2.*",
		"sebastian/phpcpd": "*",
		"phpmd/phpmd": "@stable",
		"wp-coding-standards/wpcs": "dev-master"
	},
	"extra": {
		"webroot-dir": "web/wp",
		"webroot-package": "wordpress",
		"installer-paths": {
			"web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
			"web/app/plugins/{$name}/": ["type:wordpress-plugin"],
			"web/app/themes/{$name}/": ["type:wordpress-theme"]
		}
	},
	"scripts": {
		"tests": "vendor/bin/codecept run",
		"cs": "vendor/bin/phpcs --standard=phpcs.ruleset.xml web/app/themes/twentyfifteen -s",
		"cp": "vendor/bin/phpcpd --min-lines=3 web/app/themes/twentyfifteen",
		"md": "vendor/bin/phpmd web/app/themes/twentyfifteen text phpmd.ruleset.xml"
	}
}
